@model Library_Management_System.DTO.BookDTO

@{
    ViewData["Title"] = "Book Details";
    Layout = null;
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">Book Details</h1>
            <p class="text-muted">Detailed information about the selected book</p>
        </div>
    </div>

    <!-- Card for Book Details -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Author:</strong> @Model.Author
                        </li>
                        <li class="list-group-item">
                            <strong>ISBN:</strong> @Model.ISBN
                        </li>
                        <li class="list-group-item">
                            <strong>Quantity:</strong> @Model.Quantity
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-center bg-light">
                    <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom CSS -->
<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1.display-4 {
        font-weight: bold;
        color: #007bff;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
        border-bottom: 0;
    }

    .list-group-item {
        font-size: 1.1rem;
        color: #495057;
        border: none;
        padding: 0.8rem 1.2rem;
    }

    .card-footer {
        border-top: 0;
    }

    .btn {
        font-size: 1.1rem;
        padding: 0.6rem 1.4rem;
        border-radius: 5px;
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
            background-color: #0056b3;
            color: white !important;
        }

    .text-muted {
        font-size: 0.9rem;
    }
</style>
