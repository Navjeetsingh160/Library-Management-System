@model List<Library_Management_System.DTO.TransactionDTO>

@{
    ViewData["Title"] = "Books List";
}

@{
    Layout = null;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary mb-4">Books List</h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <form class="d-flex" method="get" action="@Url.Action("UserIndexBook", "Books")">
                <input type="text" class="form-control me-2" name="searchTitle" placeholder="Search by Title" aria-label="Search by Title" />
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
            </form>

            <div class="btn-group" role="group">
                <a href="@Url.Action("IndexIssueBook", "Books", new { })" class="btn btn-danger btn-sm">
                    <i class="bi bi-eye"></i> Return Book
                </a>
                @*  <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a href="@Url.Action("Delete", "Books", new { id = book.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">
                <i class="bi bi-trash"></i> Delete
                </a> *@
            </div>
        </div>
        @*  <div class="col text-end">
        <a href="@Url.Action("Create", "Books")" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Book
        </a>
        </div> *@
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Author</th>
                            <th scope="col">ISBN</th>
                            <th scope="col">Quantity</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var book in Model)
                            {
                                <tr>
                                    <td>@book.Title</td>
                                    <td>@book.IssueDate</td>
                                    <td>@book.IssueDate</td>
                                    <td>@book.Quantity</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("ReturnBook", "Books", new { id = book.Id })" class="btn btn-danger btn-sm">
                                                <i class="bi bi-eye"></i> Return Book
                                            </a>
                                            @*  <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Books", new { id = book.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">
                                    <i class="bi bi-trash"></i> Delete
                                    </a> *@
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No books found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Optional Custom CSS for further design enhancements -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }
</style>
